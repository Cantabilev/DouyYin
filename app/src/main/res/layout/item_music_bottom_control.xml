<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/music_control_height"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:background="@color/music_control_white">

    <ImageView
        android:id="@+id/iconAlbums"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/default_cover"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="6dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:textColor="@color/music_control_title_color"
            android:textSize="@dimen/music_control_title_size"
            android:lines="1"
            android:ellipsize="end"
            android:text="歌名"/>
        <TextView
            android:id="@+id/tvArtists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/music_control_subtitle_color"
            android:textSize="@dimen/music_control_subtitle_size"
            android:lines="1"
            android:ellipsize="end"
            android:text="歌手"/>
    </LinearLayout>


</LinearLayout>