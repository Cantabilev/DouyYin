<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/music_control_height"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@drawable/music_control_press_bg"
    android:clickable="true"
    android:orientation="horizontal">

    <android.support.v4.view.ViewPager
        android:id="@+id/musicControlViewpager"
        android:layout_width="0dp"
        android:layout_height="@dimen/music_control_height"
        android:layout_weight="6"
        android:background="@color/music_control_white" />

    <com.cantabile.compoundcircle.CompoundCircleProgress
        app:antiAlias="true"
        app:arcWidth="1.4dp"
        app:bgArcColorOff="@color/control_progress_black"
        app:bgArcColorOn="@color/control_progress_grey"
        app:bgArcWidth="1.4dp"
        app:bgPicColorOff="@color/control_progress_black"
        app:bgPicColorOn="@color/colorApp"
        app:maxValue="100"
        app:startAngle="270"
        app:sweepAngle="360"
        app:value="100"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:background="@drawable/music_control_press_bg"
        android:clickable="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/music_control_press_bg"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:src="@drawable/ic_music_control_play_list_bg" />

</LinearLayout>
