<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/colorApp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iconLeftMenu"
        android:layout_width="64dp"
        android:layout_height="@dimen/comm_tool_bar_height"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/btn_action_bg_selector"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_menu"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/musicTitleTab"
        android:layout_width="120dp"
        android:layout_height="@dimen/comm_tool_bar_height"
        android:layout_centerHorizontal="true"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp">
        <android.support.design.widget.TabItem
            android:id="@+id/musicList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@drawable/selector_title_my" />
        <android.support.design.widget.TabItem
            android:id="@+id/musicOnline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@drawable/selector_title_online"/>
        <android.support.design.widget.TabItem
            android:id="@+id/musicCommunity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@drawable/selector_title_community"/>
    </android.support.design.widget.TabLayout>

    <ImageView
        android:id="@+id/iconSearch"
        android:layout_width="64dp"
        android:layout_height="@dimen/comm_tool_bar_height"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/btn_action_bg_selector"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_search"/>

</RelativeLayout>